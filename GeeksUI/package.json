{
  "name": "geeks-ui-framework",
  "version": "1.0.1",
  "description": "A modern, lightweight CSS framework for developers. Build beautiful interfaces with minimal effort.",
  "main": "dist/geeks-ui.css",
  "style": "dist/geeks-ui.css",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:css && npm run build:minify",
    "build:css": "node build.js",
    "build:minify": "cleancss -o dist/geeks-ui.min.css dist/geeks-ui.css",
    "dev": "npm run build:css && npm run watch",
    "watch": "chokidar \"src/**/*.css\" -c \"npm run build:css\"",
    "test": "echo \"âœ… CSS framework - no tests needed\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "css",
    "css-framework",
    "ui",
    "components",
    "design-system",
    "frontend",
    "responsive",
    "lightweight",
    "geeks-ui"
  ],
  "author": {
    "name": "Joey Cadieux",
    "email": "joey@tech-center.com",
    "url": "https://tech-center.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Geeks-UI-Css-Framework.git"
  },
  "bugs": {
    "url": "https://github.com/Geeks-UI-Css-Framework/issues"
  },
  "homepage": "https://geeks-ui-cdn.netlify.app",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "chokidar-cli": "^3.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
